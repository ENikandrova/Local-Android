<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_link"
            style="@style/App.Text.Default.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:gravity="center_vertical"
            android:hint="https://soundcloud.com/uiceheidd/wishing-well"
            android:minHeight="@dimen/et_min_height"
            android:paddingEnd="@dimen/control_medium_margin"
            app:layout_constraintHeight_min="@dimen/et_min_height">

    </TextView>

    <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_cross_white" />
</FrameLayout>