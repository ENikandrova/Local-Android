<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="event"
                type="com.local.app.data.event.Event" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMainDark"
            android:padding="@dimen/control_margin">


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="130dp"
                tools:listitem="@layout/item_photo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/view_blur"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintTop_toBottomOf="@id/rv_images"
                app:layout_constraintBottom_toBottomOf="@id/rv_images"/>

        <TextView
                android:id="@+id/tv_name"
                style="@style/App.Text.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                tools:text="Event name"
                android:text="@{event.eventName}"
                app:layout_constraintBottom_toTopOf="@+id/tv_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        <ImageView
                android:id="@+id/iv_dislike"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="@dimen/text_size_big"
                android:layout_marginBottom="@dimen/control_big_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_like"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_dislike" />

        <ImageView
                android:id="@+id/iv_like"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/control_big_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_dislike"
                app:srcCompat="@drawable/ic_like" />

        <LinearLayout
                android:id="@+id/rv_tags"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tag_size"
                android:layout_marginBottom="@dimen/control_medium_margin"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/iv_dislike"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:itemCount="4"
                tools:listitem="@layout/item_text_event_tag" />

        <TextView
                android:id="@+id/tv_distance"
                tools:text="300m"
                style="@style/App.Text.Title.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/control_margin"
                android:text="@{event.eventLocation.defaultDistance}"
                app:layout_constraintBottom_toTopOf="@+id/rv_tags"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                tools:text="Дома"
                android:id="@+id/tv_address"
                style="@style/App.Text.Default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{event.eventLocation.name}"
                app:layout_constraintBottom_toTopOf="@+id/tv_distance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>