<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLabelBg" />
            <corners android:radius="18dp" />
        </shape>

    </item>


    <item
            android:bottom="@dimen/control_margin"
            android:left="@dimen/control_margin"
            android:right="@dimen/control_margin"
            android:top="@dimen/control_margin">
        <shape android:shape="rectangle">
            <stroke
                    android:width="1dp"
                    android:color="@color/colorGreyLight"
                    android:dashWidth="10dp"
                    android:dashGap="@dimen/control_margin" />
            <corners android:radius="18dp" />
        </shape>

    </item>


</layer-list>